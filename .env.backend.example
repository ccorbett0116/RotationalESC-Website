# Backend Environment Configuration
# For deployment on private machine

# Django Configuration
DEBUG=False
SECRET_KEY=your-super-secret-django-key-change-this-in-production
ALLOWED_HOSTS=backend,${FRONTEND_HOST},${PRODUCTION_DOMAIN},www.${PRODUCTION_DOMAIN}

# Database Configuration
# Using SQLite database (file-based)
DATABASE_URL=sqlite:///app/database/db.sqlite3

# Stripe Configuration (backend needs secret key)
STRIPE_SECRET_KEY=sk_live_your_stripe_secret_key

# Email Configuration
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_FORWARDER=your-email@gmail.com
EMAIL_FORWARDER_PASSWORD=your-app-password

# Admin Configuration
OWNER_EMAIL=admin@yourdomain.com
OWNER_PASSWORD=SecureAdminPassword123!

# Domain Configuration
PRODUCTION_DOMAIN=yourdomain.com

# Frontend Machine Configuration
# Can be IP address or DNS name (DNS name preferred)
# Examples: frontend.internal, web-server.company.local, 10.0.1.50
FRONTEND_HOST=frontend.internal

# Security Settings
SECURE_SSL_REDIRECT=True
SECURE_HSTS_SECONDS=31536000
SECURE_HSTS_INCLUDE_SUBDOMAINS=True
SECURE_HSTS_PRELOAD=True
SECURE_CONTENT_TYPE_NOSNIFF=True
SECURE_BROWSER_XSS_FILTER=True

# Note: No frontend build variables or certbot needed on backend machine